<h1>Notifications</h1>

{{#each questions}}
<div
    style="border:1px solid black; margin : 10px 0;padding :20px; width : 14.75%; {{#if this.seen}}{{else}} background-color: rgba(0,0,0,0.5) {{/if}}">
    <h3>You have a new Question: "{{this.question}}"</h3>
</div>
{{/each}}

<script>
    axios.post("/account/notifications");
</script>