<link rel='stylesheet' href='/stylesheets/index.css' />

<script>
    document.querySelector('body > div > div > div:nth-child(3) > button').addEventListener('click', (e) => {
        window.location.href = "/login"
    });
    document.querySelector('body > div > div > div.mx-auto.d-flex.justify-content-center.m-3 > button').addEventListener('click', (e) => {
        window.location.href = "/signup"
    });

    axios.post("/notifications").then(res => {
        if (res.data.total > 0) {
            document.querySelector("#notifications").innerHTML = `Notifications ${res.data.total}`
        } else {
            document.querySelector("#notifications").innerHTML = "Notifications"
        }
    })
    setInterval(() => {
        axios.post("/notifications").then(res => {
            if (res.data.total > 0) {
                document.querySelector("#notifications").innerHTML = `Notifications ${res.data.total}`
            } else {
                document.querySelector("#notifications").innerHTML = "Notifications"
            }
        })
    }, 2000)

</script>